<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:layout_marginTop="20dp"
            android:hint="@string/nome_escolhido"
            android:id="@+id/nome_escolhido"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:hint="@string/estado"
            android:id="@+id/estado"
            android:layout_gravity="center"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:text="@string/button_ON"
            android:id="@+id/button_onoff"
            android:layout_gravity="center" />

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:layout_marginTop="20dp"
            android:hint="@string/nome_escolhido_2"
            android:id="@+id/nome_escolhido_2"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:hint="@string/estado_2"
            android:id="@+id/estado_2"
            android:layout_gravity="center"/>


        <!--<Switch
            android:id="@+id/switch_int"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:switchMinWidth="200dp"
            android:layout_gravity="center" />-->

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_margin="15dp"
                android:id="@+id/button_interruptor"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/pos1"/>

            <!--Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/button_back"
                android:layout_marginTop="20dp"
                android:layout_gravity="bottom"
                android:text="@string/back"
                /-->

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/bottom_panel"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:text="Button 1"

            />

        <ImageButton
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:text="Button 2"

            />

        <ImageButton
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:text="Button 3"/>
    </LinearLayout>

</RelativeLayout>